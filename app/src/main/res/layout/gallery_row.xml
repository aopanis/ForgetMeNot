<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.aopanis.forgetmenot.views.SquareImageView
        android:id="@+id/galleryImageItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginGallery"
        android:gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/galleryLocationIconItem"
        android:layout_width="@dimen/locIconWidth"
        android:layout_height="@dimen/locIconHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/marginContent"
        android:src="@drawable/ic_location" />

</RelativeLayout>